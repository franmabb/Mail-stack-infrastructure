sudo bash -c 'cat > /etc/bind/db.franciscomateos <<EOF
;
; BIND data file for franciscomateos.test
;
$TTL    604800
@       IN      SOA     ns.franciscomateos.test. root.franciscomateos.test. (
                            2         ; Serial
                            604800    ; Refresh
                            86400     ; Retry
                            2419200   ; Expire
                            604800 )  ; Negative Cache TTL
;
; Servidor DNS principal (NS)
@       IN      NS      ns.franciscomateos.test.

; REGISTROS A (IPs directas)
@       IN      A       192.168.57.10
ns      IN      A       192.168.57.10
postfix IN      A       192.168.57.10
dovecot IN      A       192.168.57.10

; REGISTROS CNAME (Alias)
smtp    IN      CNAME   postfix.franciscomateos.test.
pop     IN      CNAME   dovecot.franciscomateos.test.
imap    IN      CNAME   dovecot.franciscomateos.test.
EOF'
